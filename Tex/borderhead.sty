\def\chapter{%
 \if@openright\cleardoublepage\else\clearpage\fi
 \global\@topnum\z@
 \@afterindenttrue
 \secdef\@chapter\@schapter}
 
 \def\@makechapterhead#1{%
  \vspace*{50\p@}%
  {%
   \parindent \z@ \raggedright
   \reset@font\huge\bfseries
   \ifnum \c@secnumdepth >\m@ne
   \vrule width 0.3zw height 4.5zw \vskip -4.5zw \hskip 2zw 
    \@chapapp\thechapter\@chappos
    \par\nobreak
    \vskip 20\p@
    \hskip 2zw %
   \fi
   \interlinepenalty\@M
   #1\par\nobreak
   \vskip 40\p@
  }%
}

\def\@makeschapterhead#1{%
 \vspace*{50\p@}%
 {%
  \parindent \z@ \raggedright
  \reset@font\huge\bfseries
  \interlinepenalty\@M
  #1\par\nobreak
  \vskip 40\p@
 }%
}

